<%- include('./index')-%>

<h2 style="color: blue; text-align: center;">Productos</h2>

<% if (hayProductos) { %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        <% productos.forEach(prod=> { %>
        <tr>
            <td>
                <%= prod.title %>
            </td>
            <td>$<%= prod.price %>
            </td>
            <td>
                <%= prod.thumbnail %>
        </tr>
        <% }) %>
    </table>
</div>
<%} else { %>
<h3 style="color: crimson; text-align: center;">No hay productos cargados aun</h3>
<% } %>